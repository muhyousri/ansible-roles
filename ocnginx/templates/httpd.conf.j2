<VirtualHost *:80>
 ServerAdmin admin@{{ domain }}
 DocumentRoot /var/www/html/oc/
 ServerName {{ domain }}
 ServerAlias www.{{ domain }}
<Directory /var/www/html/oc/>
 Options FollowSymLinks
 AllowOverride All
</Directory>
 ErrorLog /var/log/apache2/oc-error_log
 CustomLog /var/log/apache2/oc-access_log common
</VirtualHost>
